{
    "compilerOptions": {
        "module": "ES2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@fileSystem/*": [
                "src/controllers/fileSystem/*"
            ],
        },
        "strict": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*",
    ]
}